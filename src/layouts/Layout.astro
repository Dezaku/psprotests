---
import '../styles/global.css';
const clientId = import.meta.env.PUBLIC_DATABUDDY_CLIENT_ID;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
		
		<!-- Preload Inter Display fonts -->
		<link rel="preload" href="/fonts/InterDisplay-Regular.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/InterDisplay-Medium.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/InterDisplay-SemiBold.woff2" as="font" type="font/woff2" crossorigin>
		<script src="https://cdn.databuddy.cc/databuddy.js"
  data-client-id={clientId}
  data-track-hash-changes="true"
  data-track-attributes="true"
  data-track-outgoing-links="true"
  data-track-interactions="true"
  data-track-engagement="true"
  data-track-scroll-depth="true"
  data-track-exit-intent="true"
  data-track-bounce-rate="true"
  data-track-web-vitals="true"
  data-track-errors="true"
  data-enable-batching="true"
  crossorigin="anonymous"
  async
></script>
	</head>
	<body>
		<slot />
		<footer style="width:100%;text-align:center;padding:2rem 0 1rem 0;font-size:0.95rem;color:#888;">
			<a href="/imprint" style="color:#888;text-decoration:underline;">Imprint</a>
		</footer>

	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
